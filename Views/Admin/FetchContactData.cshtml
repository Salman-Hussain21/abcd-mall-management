@model IEnumerable<Ecom_Store.Models.Contactmodel>

@{
    ViewData["Title"] = "FetchContactData";
    Layout = "~/Views/Shared/Admin_Header_Footer.cshtml";
}
<style>
    .table-bordered{
        border:2px solid white;
        background-color:white;
    }
    th{
        color:white;
    }
    td{
        color:white;
    }
   
</style>

<h1>Contact Data</h1>


<div class="card ml-3 mr-3 shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-dark">Contact Data </h6>
    </div>
    <div class="table-responsive">
            <table class ="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            <a asp-action="ContactEdit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="ContactDetails" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="ContactDelete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
    </div>

</div>