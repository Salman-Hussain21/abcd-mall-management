@model IEnumerable<Ecom_Store.Models.ProductModel>

@{
    ViewData["Title"] = "ProductPage";
    Layout = "~/Views/Shared/Header_footer_layout.cshtml";
}



    <h2 style="margin-left:600px;">Buy Products</h2>


@foreach (var item in Model) {
<div class="col-md-3 col-lg-3 col-xl-3 mb-2" >
    <div class="card" style="border-radius: 15px;">
        <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
             data-mdb-ripple-color="light">

                <img src="~/ProductImages/@Html.DisplayFor(modelItem => item.ProductImage)" height="300px" width="300px" />

                <style="border-top-left-radius: 15px; border-top-right-radius: 15px;" class="img-fluid"
                 alt="Laptop" />
            <a href="#!">
                <div class="mask"></div>
            </a>
        </div>
        <div class="card-body pb-0">
            <div class="d-flex justify-content-between">
                <div>
                    <p><a href="#!" class="text-dark"> @Html.DisplayFor(modelItem => item.ProductName)</a></p>
                    <p class="small text-muted">Category</p>
                </div>
                
            </div>
        </div>
        <hr class="my-0" />
        <div class="card-body pb-0">
            <div class="d-flex justify-content-between">
                    <p>
                        <a href="#!" class="text-dark">
                            RS.@Html.DisplayFor(modelItem => item.ProductPrice)
                        </a>
                    </p>
                
            </div>
                <p class="small text-muted">
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </p>
        </div>
        <hr class="my-0" />
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center pb-2 mb-1">

                    <a asp-action="BuyPrd" class="btn " asp-route-id="@item.id"> Add To Cart</a>
                    
                    <a asp-action="BuyPrd" class="btn btn-primary" asp-route-id="@item.id">Buy now</a> 

            </div>
        </div>
    </div>
</div>
}